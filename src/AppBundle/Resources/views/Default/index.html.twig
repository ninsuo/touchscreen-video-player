{% extends 'AppBundle::layout.html.twig' %}

{% block title %}{% endblock %}

{% block body %}

    {% if not is_granted('ROLE_USER') %}

        <div id="pad">
            {{ render(controller('DigiLoginBundle:Connect:pad', {'container': '#pad', 'route': 'home'})) }}
        </div>

    {% else %}

        {% if not is_granted('ROLE_GROUP_VIDEO') %}

            {% import 'BaseBundle::macros.html.twig' as macros %}

            {{ macros.box('blue', 'app.access_denied.title'|trans, 'app.access_denied.message'|trans) }}

        {% else %}

            <div class="text-center">
                <a class="btn btn-primary video-button" href="{{ path('video_index') }}">{{ 'app.videos'|trans }}</a>
            </div>

        {% endif %}

    {% endif %}

{% endblock %}
