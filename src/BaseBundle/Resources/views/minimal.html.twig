{# BaseBundle::minimal.html.twig #}
{# BaseBundle::base.html.twig #}

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        {{ include('BraincraftedBootstrapBundle::ie8-support.html.twig') }}

        <title>{% block meta_title %}{% block title %}{{ fuz.site_default_title | trans }}{% endblock %}{% endblock %}</title>
        <meta name="description" content="{% block meta_description %}{% block description %}{{ fuz.site_description | trans }}{% endblock %}{% endblock %}">
        <meta name="keywords" content="{% block meta_keywords %}{% block keywords %}{% endblock %}{% endblock %}">
        <meta name="author" content="{% block meta_author %}{% block author %}{% endblock %}{% endblock %}">
        <link rel="icon" href="{{ asset('favicon.ico') }}" type="image/x-icon"/>
        <link rel="apple-touch-icon" href="{{ asset('apple-touch-icon.png') }}"/>

        {% block css %}
            <link href="{{ asset('css/bootstrap.css') }}" rel="stylesheet" media="screen">
            <link href="{{ asset('bundles/base/bootstrap-submenu/css/bootstrap-submenu.min.css') }}" rel="stylesheet" media="screen">
            <link href="{{ asset('bundles/base/jquery-ui-1.11.2/jquery-ui.min.css') }}" rel="stylesheet" media="screen">
            {% block extra_css %}{% endblock %}
            <link rel="stylesheet" href="{{ asset('bundles/base/css/custom.css') }}">
        {% endblock %}
</head>
<body>
    <div class="container">
        {% block flash %}{{ include('BraincraftedBootstrapBundle::flash.html.twig', {'close': true}) }}{% endblock %}
        {% block body %}{% endblock %}
    </div>

    {% block js %}
        <script src="{{ asset('js/jquery.js') }}"></script>
        <script src="{{ asset('js/bootstrap.js') }}"></script>
        <script src="{{ asset('bundles/base/bootstrap-submenu/js/bootstrap-submenu.min.js') }}"></script>
        <script src="{{ asset('bundles/base/jquery-ui-1.11.2/jquery-ui.min.js') }}"></script>
        <script src="{{ asset('bundles/base/js/jquery.domajax.js') }}"></script>
        <script src="{{ asset('bundles/base/js/jquery.collection.js') }}"></script>
        <script src="{{ asset('bundles/base/js/common.js') }}"></script>
    {% endblock %}

    {% block script %}{% endblock %}
</body>
</html>